
plugin "cocoapods-frost"

use_frameworks! :linkage => :static

platform :ios, '12.0'

install! "cocoapods",
         :generate_multiple_pod_projects => true,
         :incremental_installation => false

target 'Demo' do

  frost_pod "Moya/Core"
  frost_pod "Texture/Core"
  frost_pod "Texture/Video"
  # frost_pod "SVGKit"
  frost_pod "AppVersionMonitor"

  pod "Advance", git: "git@github.com:timdonnelly/Advance.git", branch: "master"

  pod 'RealmSwift'

  break
  
  # frost_pod "Texture/Core"  
  # frost_pod "Texture/Video"

  frost_pod "JAYSON"
  
  # pod "Brightroom"

  pod "FBSDKCoreKit"
  pod "FBSDKLoginKit"

  frost_pod "SSZipArchive"
  
  frost_pod "SwiftDate"
  frost_pod "RxSwift"
  frost_pod "RxCocoa"
  frost_pod "RxRelay"
  frost_pod "RxFuture"
  frost_pod "lottie-ios"

  # pod "Verge"
  # pod "Firebase/Core"
  # pod "Firebase/Performance"
  # pod "Firebase/Messaging"
  # pod "Firebase/InAppMessaging"
  # pod "Firebase/Auth"
  # pod "FirebaseUI/Phone"
  # pod "FirebaseUI/OAuth"
  # pod "Firebase/Crashlytics"
  # pod "Firebase/Analytics"

  # pod "gRPC-Swift", ">=1.4.2"
  
  frost_pod "MagazineLayout"
  
end

post_install do |installer|
  puts "Post"
  installer.pods_project.targets.each do |target|
    target.build_configurations.each do |config|
      config.build_settings['SWIFT_VERSION'] = '5.0'
     end
   end
end